{
  "name": "fetchyeah",
  "description": "Tiny (less than 3kb) fetch wrapper library",
  "version": "0.3.1",
  "author": "Jane Web Team",
  "contributors": [
    "Cory Brown (https://github.com/uniqname)",
    "Madeline Trotter (https://madeline.dev)",
    "Tom Priham (https://github.com/tompridham)",
    "Zac Anger (https://zacanger.com)"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s -s build:clean build:rollup",
    "build:clean": "rm -rf lib && mkdir -p lib",
    "build:rollup": "rollup -c",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "cover:coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ]; then coveralls < coverage/lcov.info; fi || true",
    "format": "prettier --write \"src/*.ts\"",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "test": "run-s -s test:lint test:jest",
    "test:build": "run-s -s test:lint cover cover:coveralls",
    "test:jest": "jest",
    "test:lint": "eslint -c .eslintrc.json src/*.ts"
  },
  "homepage": "https://github.com/jane/fetchyeah#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jane/fetchyeah.git"
  },
  "bugs": "https://github.com/jane/fetchyeah/issues",
  "keywords": [
    "browser",
    "fetch",
    "json",
    "node",
    "request",
    "xhr"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.12",
    "coveralls": "3.0.3",
    "eslint": "5.16.0",
    "eslint-plugin-jane": "5.1.8",
    "husky": "2.2.0",
    "jest": "24.7.1",
    "lint-staged": "8.1.6",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.0",
    "prettier": "1.17.0",
    "rollup": "1.11.0",
    "rollup-plugin-commonjs": "9.3.4",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "4.2.3",
    "rollup-plugin-typescript": "1.0.1",
    "rollup-plugin-uglify": "6.0.2",
    "rollup-watch": "4.3.1",
    "sortpack": "1.1.5",
    "tap-spec": "5.0.0",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "typescript": "3.4.5",
    "uglify-es": "3.3.10"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|node_modules)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "lint-staged": {
    "ignore": [
      "lib/**/*.js"
    ],
    "linters": {
      "*.ts": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
