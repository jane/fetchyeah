{
  "name": "fetchyeah",
  "description": "Miniscule JSON fetch wrapper library.",
  "version": "2.2.6",
  "author": "Zac Anger (https://zacanger.com)",
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s -s build:clean build:rollup",
    "build:clean": "rm -rf lib && mkdir -p lib",
    "build:rollup": "rollup -c",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "cover:coveralls": "if [ -n \"$COVERALLS_REPO_TOKEN\" ]; then coveralls < coverage/lcov.info; fi || true",
    "format": "sortpack && prettier --write \"src/*.ts\"",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "test": "run-s -s test:ts test:lint test:jest",
    "test:build": "run-s -s test:ts test:lint cover cover:coveralls",
    "test:jest": "jest",
    "test:lint": "eslint -c .eslintrc.json src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://github.com/zacanger/fetchyeah#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/fetchyeah.git"
  },
  "bugs": "https://github.com/zacanger/fetchyeah/issues",
  "keywords": [
    "browser",
    "fetch",
    "json",
    "node",
    "request",
    "xhr"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.18",
    "coveralls": "3.0.6",
    "eslint": "6.2.1",
    "eslint-plugin-jane": "6.1.0",
    "husky": "3.0.4",
    "isomorphic-fetch": "2.2.1",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rollup": "1.20.1",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-typescript2": "0.23.0",
    "rollup-plugin-uglify": "6.0.2",
    "rollup-watch": "4.3.1",
    "sortpack": "1.2.1",
    "tap-spec": "5.0.0",
    "ts-jest": "24.0.2",
    "tslib": "1.10.0",
    "typescript": "3.5.3",
    "uglify-es": "3.3.10"
  },
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=10.10.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/index.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "./config/jest-setup.js"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|node_modules)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  }
}
