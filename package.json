{
  "name": "fetchyeah",
  "description": "Miniscule JSON fetch wrapper library.",
  "version": "3.1.5",
  "author": "Zac Anger (https://zacanger.com)",
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s -s build:clean build:rollup",
    "build:clean": "rm -rf lib && mkdir -p lib",
    "build:rollup": "rollup -c",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "format": "sortpack && prettier --write \"src/*.ts\"",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "test": "run-s -s test:ts test:lint test:jest",
    "test:build": "run-s -s test:ts test:lint cover",
    "test:jest": "jest",
    "test:lint": "eslint -c .eslintrc.json src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://github.com/zacanger/fetchyeah#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/fetchyeah.git"
  },
  "bugs": "https://github.com/zacanger/fetchyeah/issues",
  "keywords": [
    "browser",
    "fetch",
    "json",
    "node",
    "request",
    "xhr"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "26.0.15",
    "eslint": "7.13.0",
    "eslint-plugin-zacanger": "2.1.3",
    "husky": "4.3.0",
    "isomorphic-fetch": "3.0.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "rollup": "2.33.2",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-typescript2": "0.29.0",
    "rollup-plugin-uglify": "6.0.4",
    "rollup-watch": "4.3.1",
    "sortpack": "2.1.10",
    "tap-spec": "5.0.0",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5",
    "uglify-es": "3.3.10"
  },
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/index.ts"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "./config/jest-setup.js"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|node_modules)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  }
}
